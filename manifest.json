{
  "manifest_version": 2,
  "name": "Push to Transmission",
  "description": "Send torrent files to Transmission",
  "version": "1.0",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_page": "options.html"
}
